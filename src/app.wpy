      'pages/gas2sgas',
      'pages/startbidding',
      'pages/assets',
      'pages/contact',
      'pages/addcontact'
    ],
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: 'white',
      navigationBarTitleText: 'NEL',
      navigationBarTextStyle: 'black'
    },
    tabBar: {
      color: '#A9A9A9',
      selectedColor: '#333333',
      backgroundColor: '#ffffff',
      borderStyle: 'black',
      list: [
        {
          pagePath: 'pages/home',
          text: '钱包',
          iconPath: 'images/Wallet.png',
          selectedIconPath: 'images/Wallet_s.png'
        },
        {
          pagePath: 'pages/send',
          text: '转账',
          iconPath: 'images/Transfer.png',
          selectedIconPath: 'images/Transfer_s.png'
        },
        {
          pagePath: 'pages/nns',
          text: 'NNS',
          iconPath: 'images/NNS.png',
          selectedIconPath: 'images/NNS_s.png'
        },
        {
          pagePath: 'pages/mine',
          text: '个人',
          iconPath: 'images/Mine.png',
          selectedIconPath: 'images/Mine_s.png'
        }
      ]
    }
  };

  globalData = {
    userInfo: null
  };

  constructor() {
    super();
    this.use('requestfix');
  }

  onLaunch() {
    const that = this;

    // 登陆获取用户code
    wx.login({
      success: async function(res) {
        const code = res['code'];
        if (code) {
          // 获取用户openid
          let id = await Https.addr_openid(code);
          id = id['openid'];
          // 保存用户id在wallet中
          Util.set.openid = id;
        }
      }
    });

    // 循环执行代码
    setInterval(async () => {
      Util.service.update();
    }, 15000); // 循环时间 这里是15秒
  }
}
</script>
