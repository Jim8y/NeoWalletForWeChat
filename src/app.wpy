<script>
import wepy from 'wepy';
import 'wepy-async-function';

import Util, { Https } from './utils/index';

export default class extends wepy.app {
  config = {
    pages: [
      'pages/index',
      'pages/register',
      'pages/receive',
      'pages/regresult',
      'pages/accounts',
