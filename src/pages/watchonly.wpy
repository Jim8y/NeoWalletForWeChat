<template>
  <view class="container">
   <view class="wallet-block" wx:for="{{watchonly}}" >
     <view class="content">
      <view class="area-icon">
        <image  src="../images/icon.png" />
      </view>
      <view class="area-info" @tap="OnSelect({{item.address}},{{item.label}})">
        <text class="info-name"> {{item.label}}</text>
        <text class="info-addr">{{item.address}}</text>
      </view>
      </view>
    </view>
      <view class="foot-button">
        <button type="primary" style="background-color:#69c0fd;" @tap="registerWatch()">添加观察账户</button>
      </view>
  </view>
</template>

<script>
import wepy from 'wepy';
import { Wallet } from '../utils/wallet';
import { WWW } from '../utils/API';
import { LOCAL_WALLET, CURR_WALLET } from '../utils/constant';
import tip from '../utils/tip';
export default class WatchOnly extends wepy.page {
  customData = {}; // 自定义数据

  customFunction() {} // 自定义方法

  onLoad() {
    this.OnLoadWatchOnly();
  } // 在Page和Component共用的生命周期函数

  async onShow() {} // 只在Page中存在的页面生命周期函数

  config = {
    navigationBarTitleText: '观察账户列表'
  }; // 只在Page实例中存在的配置数据，对应于原生的page.json文件

  data = {
    watchonly: []
  }; // 页面所需数据均需在这里声明，可用于模板数据绑定

  components = {}; // 声明页面中所引用的组件，或声明组件中所引用的子组件

  mixins = []; // 声明页面所引用的Mixin实例

  computed = {}; // 声明计算属性（详见后文介绍）

  watch = {}; // 声明数据watcher（详见后文介绍）

  methods = {
    async OnSelect(addr, label) {
      const selected = addr;
      wepy.reLaunch({
        url: '/pages/watch?address=' + selected + '&label=' + label
      });
    },
    registerWatch() {
      wepy.navigateTo({
        url: '/pages/registerwatch'
      });
    }
  }; // 声明页面wxml中标签的事件处理函数。注意，此处只用于声明页面wxml中标签的bind、catch事件，自定义方法需以自定义方法的方式声明

  events = {}; // 声明组件之间的事件处理函数
  async OnLoadWatchOnly() {
    let that = this;

    let res = await WWW.addr_query(Wallet.openid);
    res = JSON.parse(res);
    if (res['code'] === 0) {
      let addr = res['address'];
      that.watchonly = addr;
      that.$apply();
    }
    wx.hideNavigationBarLoading(); //完成停止加载
    wx.stopPullDownRefresh(); //停止下拉刷新
  }

  async onPullDownRefresh() {
    if (this.isLoading) return;
    this.isLoading = true;
    this.$apply();
    await OnLoadWatchOnly();
    this.isLoading = false;
    this.$apply();
  }
}
</script>
