<script>
import wepy from 'wepy';
import { WWW } from '../utils/API';
import { CoinTool } from '../utils/Coin';
export default class Transaction extends wepy.page {
  config = {
    navigationBarTitleText: 'Transaction'
  };
  data = {
    txid: '',
    vout: [],
    tx: {}
  };

  components = {};

  methods = {};
  onLoad(option) {
    this.txid = option.txid;
    this.$apply();
    this.OnLoadTX(this.txid);
  }
  async onShow() {
    // Service.add('transaction',this)
  }

  async OnLoadTX(txid) {
    const r = await WWW.rpc_getRawTransaction(txid);
    this.tx = r['0'];
    this.$apply();
    let outputs = this.tx.vout;
    for (let index in outputs) {
      outputs[index].asset = CoinTool.assetID2name[outputs[index].asset];
    }
    this.vout = outputs;
    this.$apply();
    console.log(r);
  }
}
</script>
