     <view class="item">
        <text class="label">大小</text>
        <text class="content">{{tx.size}}</text>
    </view>
    <view class="item">
        <text class="label">交易类型</text>
        <text class="content">{{tx.type}}</text>
    </view>
    <view class="item">
        <text class="label">交易脚本</text>
        <view class="content">{{tx.scripts[0].invocation}}</view>
    </view>
    <view class="item" wx:for="{{tx.vin}}">
      <text class="label">交易输入</text>
      <view class="vin-out">
        <text class="upper">{{item.txid}}</text>
        <text class="lower">VOUT：{{item.vout}}</text>
      </view>
    </view>
    <view class="item" wx:for="{{vout}}">
      <text class="label">交易输出</text>
      <view class="vin-out">
        <text class="upper">{{item.address}}</text>
        <text class="lower">{{item.asset}} ：{{ item.value}}</text>
      </view>
